@using Microsoft.AspNetCore.Components.Forms

@typeparam T
@inherits CardBase<T>

<AuthorizeView>
    <!--
    Need to specify the context to avoid clashes with other auto generated contexts
    https://github.com/chanan/BlazorStrap/issues/149 
    -->
    <Authorized Context="cardAuth">
        @if (DynamicModel == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            @if(@Alert == null)
            {
                <div class="container container-body float-start">
                    <div class="lead">
                        <h1>@DynamicModel.Config.Title</h1>
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <div class="card">
                                <EditForm Model="@DynamicModel.Model" OnValidSubmit="@Submit">
                                    <div class="card-header">
                                        <div class="clearfix">
                                            @DynamicModel.Title
                                            @if (isSaveInProgress)
                                            {
                                                <i class="fas fa-spinner fa-spin fa-2x float-end"></i>
                                            }
                                            else if (!isDeleteInProgress)
                                            {
                                                <button type="submit" class="btn btn-small btn-outline-primary fas fa-save float-end"/>
                                            }
                                            @if (isDeleteInProgress)
                                            {
                                                <i class="fas fa-spinner fa-spin fa-2x float-end"></i>
                                            }
                                            else if (!isSaveInProgress)
                                            {
                                                <button type="button" class="btn btn-small btn-outline-danger fas fa-times float-end" @onclick="() => Delete()"/>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-body">

                                        @foreach(var dynamicField in DynamicModel.DynamicFields)
                                        {
                                            <DynamicComponent Type="dynamicField.DynamicComponent" Parameters="dynamicField.Parameters" />
                                        }

                                     </div>
                                 </EditForm>
                           </div>
                        </div>
                        <col class="col-sm" />
                    </div>
                </div>
            }
            else
            {
                <Alert AlertType="@Alert.AlertType" Title="@Alert.Title" Message="@Alert.Message" RedirectText="@Alert.RedirectText" RedirectPage="@Alert.RedirectPage"/>
            }
        }  
    </Authorized>
    <NotAuthorized>
        <p>Please log in.</p>
    </NotAuthorized>
</AuthorizeView>