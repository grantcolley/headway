@using Headway.Core.Dynamic
@using Headway.Core.Model
@using Microsoft.AspNetCore.Components.Forms
@using System.Reflection
@using System.Linq.Expressions

@inherits DropdownBase

<div class="mb-1">
    <div class="row">
        <div class="col-sm-4 col-form-label">
            @if(string.IsNullOrWhiteSpace(Field.Tooltip))
            {
                @Field.Label                
            }
            else
            {
                <ComponentTip Text="@Field.Tooltip">@Field.Label</ComponentTip>    
            }
        </div>
        <div class="col-sm-8">
            <InputSelect class="form-control" Value="@PropertyValue" ValueExpression="FieldExpression" ValueChanged="@((string value) => OnValueChanged(value))">
                @if (optionItems != null)
                {
                    @foreach (var optionItem in optionItems)
                    {
                        <option value="@optionItem.Id">@optionItem.Display</option>
                    }
                }
            </InputSelect>

            <DynamicValidationMessage For="FieldExpression" Field="@Field"/>
        </div>
    </div>
</div>