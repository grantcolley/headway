@inherits StringListBase

@if (string.IsNullOrWhiteSpace(Field.Tooltip))
{
    <MudText Typo="LabelTypo" Class="mb-2 pl-4">@Field.Label</MudText>
}
else
{
    <MudTooltip Text="@Field.Tooltip" Placement="Placement.Top" Arrow="true">
        <MudText Typo="LabelTypo" Class="mb-2 pl-4">@Field.Label</MudText>
    </MudTooltip>
}

<MudTable Items="@list" Hover="true" CustomHeader="true" Striped="true"
          Filter="new Func<string,bool>(FilterFunction)">
    <ToolBarContent>
        <MudTextField @bind-Value="filterString" Placeholder="Filter" Adornment="Adornment.Start" 
                      AdornmentIcon="@Icons.Material.Filled.FilterAlt" IconSize="Size.Medium" Class="mt-0" ReadOnly="@Field.ReadOnly"></MudTextField>
    </ToolBarContent>
    <RowTemplate>
        <MudTd>
            @context
        </MudTd> 
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>